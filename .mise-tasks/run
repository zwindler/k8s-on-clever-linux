# Step 2: Setup RBAC for worker nodes (requires API server to be running)
echo "ğŸ”’ Step 2: Setting up RBAC for worker nodes..."
./run-scripts/setup-node-rbac.sh

echo ""

# Step 3: Generate worker setup script (dynamic, includes fresh tokens)
echo "ğŸ“ Step 3: Generating worker setup script..."
./run-scripts/generate-worker-script.sh

echo ""
echo "âœ… Kubernetes cluster startup complete!"
echo ""
echo "ğŸ”§ Running with Clever Cloud workers:"
echo "  â€¢ Worker 0: etcd database"
